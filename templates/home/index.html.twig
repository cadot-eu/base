{% extends 'base.html.twig' %}

{% block title %}Collectif SIPE
{% endblock %}

{% block body %}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<div
		class="container-fluid">
		<!-- Menu toggle button pour mobile -->
		<button class="btn menu-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
			<i class="bi bi-list"></i>
			<span class="menu-text">MENU</span>
		</button>

		<!-- Logo -->
		<a class="navbar-brand mx-auto mx-lg-0 bg-danger" href="#">
			<img src="{{ asset('images/logo.png') }}" alt="Collectif SIPE" class="logo">
		</a>

		<!-- Navbar items -->
		<div class="d-none d-lg-flex">
			<ul class="navbar-nav me-auto">
				{% set navItems = ['À PROPOS', 'NOS CAMPAGNES', 'S\'INFORMER', 'ESPACE PRESSE'] %}
					{% for item in navItems %}
						<li class="nav-item">
							<a class="nav-link" href="#">{{ item }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<!-- Bouton Faire un don - toujours visible -->
			<a href="#" class="btn donate-btn ms-auto">FAIRE UN DON</a>
		</div>
	</nav>

	<div class="container-fluid p-0">
		<div
			class="row g-0">
			<!-- Sidebar - visible sur desktop seulement -->
			<div class="col-md-3 col-lg-2 sidebar-container">
				<div class="sidebar">
					<h5 class="mb-4">Navigation</h5>
					<ul class="sidebar-menu">
						{% set navItems = [
							{label: 'Qui sommes-nous ?', link: '#'},
							{label: 'Nos valeurs', link: '#'},
							{label: 'Nos campagnes', link: '#'},
							{label: 'Nos avancées', link: '#'},
							{label: 'Nos stratégies', link: '#'}
						] %}
						{% for item in navItems %}
							<li>
								<a href="{{ item.link }}">{{ item.label }}</a>
							</li>
						{% endfor %}
					</ul>
					<a href="#" class="btn btn-success mt-4">Agir avec nous</a>
				</div>
			</div>

			<!-- Main Content -->
			<div class="col-12 col-md-9 col-lg-10">
				<div
					class="main-content">
					<!-- Banner -->
					<div class="main-banner">
						<div class="banner-content text-center">
							<h1 class="display-4">COLLECTIF SIPE</h1>
							<p class="lead">OBTENIR DES VICTOIRES ATTEIGNABLES À COURT-TERME, ET AVANCER PAS À PAS JUSQU'À L'ABOLITION.</p>
						</div>
					</div>

					<!-- Content -->
					<div class="container">
						<h2 class="mb-4">Nos valeurs</h2>
						<div class="bg-light p-4 mb-4">
							<p>Contenu des valeurs ici...</p>
						</div>
						<!-- Autres contenus -->
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Off-canvas sidebar pour mobile -->
	<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar">
		<div class="offcanvas-header">
			<h5 class="offcanvas-title">Collectif SIPE</h5>
			<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body">
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">À PROPOS</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">NOS CAMPAGNES</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">S'INFORMER</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">ESPACE PRESSE</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">Qui sommes-nous ?</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">Nos valeurs</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">Nos campagnes</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">Nos avancées</a>
				</li>
				<li class="list-group-item">
					<a href="#" class="text-decoration-none">Nos stratégies</a>
				</li>
			</ul>
			<div class="mt-4">
				<a href="#" class="btn btn-success w-100">Agir avec nous</a>
			</div>
		</div>
	</div>


{% endblock %}
